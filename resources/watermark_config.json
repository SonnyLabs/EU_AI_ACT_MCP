{
  "version": "1.0",
  "description": "Watermarking configuration for EU AI Act Article 50(2) compliance",
  "standards": {
    "c2pa": {
      "version": "2.1",
      "description": "Coalition for Content Provenance and Authenticity",
      "claim_generator": "EU AI Act Compliance MCP Server",
      "hash_algorithm": "SHA-256",
      "signature_algorithm": "ES256",
      "supported_formats": ["image/jpeg", "image/png", "image/webp", "video/mp4", "video/webm", "audio/mp3", "audio/wav"],
      "manifest_store": "sidecar",
      "verification_url": "https://verify.contentauthenticity.org/",
      "required_assertions": [
        "c2pa.actions",
        "c2pa.claim.generator",
        "c2pa.claim.timestamp",
        "stds.schema-org.CreativeWork"
      ]
    },
    "iptc": {
      "version": "2024.1",
      "description": "International Press Telecommunications Council Photo Metadata",
      "digital_source_type": "trainedAlgorithmicMedia",
      "digital_source_type_description": "Content created by training a software model on existing content",
      "credit": "Generated by AI",
      "usage_terms": "AI-generated content subject to EU AI Act Article 50",
      "required_fields": [
        "Digital Source Type",
        "Credit",
        "Copyright Notice",
        "Creator",
        "Date Created"
      ]
    }
  },
  "content_types": {
    "image": {
      "formats": ["jpeg", "png", "webp", "gif", "bmp", "tiff"],
      "watermark_methods": ["C2PA", "IPTC", "Exif", "XMP"],
      "preferred_method": "C2PA",
      "fallback_method": "IPTC",
      "visibility": "invisible",
      "robustness": "resistant to compression and resizing",
      "metadata_fields": {
        "ai_generated": true,
        "generator": "string",
        "model_version": "string",
        "generation_timestamp": "ISO 8601",
        "prompt_hash": "SHA-256 (optional)",
        "training_data_source": "string (optional)"
      }
    },
    "video": {
      "formats": ["mp4", "webm", "mov", "avi"],
      "watermark_methods": ["C2PA", "IPTC Video Metadata"],
      "preferred_method": "C2PA",
      "visibility": "invisible",
      "robustness": "frame-level embedding",
      "metadata_fields": {
        "ai_generated": true,
        "generator": "string",
        "generation_timestamp": "ISO 8601",
        "frame_rate": "number",
        "duration": "seconds"
      }
    },
    "audio": {
      "formats": ["mp3", "wav", "opus", "aac", "flac"],
      "watermark_methods": ["C2PA", "Audio Fingerprinting", "IPTC Audio Metadata"],
      "preferred_method": "C2PA",
      "fallback_method": "Audio Fingerprinting",
      "visibility": "inaudible",
      "robustness": "resistant to compression and format conversion",
      "metadata_fields": {
        "ai_generated": true,
        "generator": "string",
        "generation_timestamp": "ISO 8601",
        "sample_rate": "Hz",
        "bit_depth": "bits"
      }
    },
    "text": {
      "formats": ["plain", "markdown", "html", "json"],
      "watermark_methods": ["JSON-LD", "HTML meta tags", "Inline comments", "Metadata headers"],
      "preferred_method": "JSON-LD",
      "visibility": "machine-readable only",
      "metadata_fields": {
        "ai_generated": true,
        "generator": "string",
        "generation_timestamp": "ISO 8601",
        "content_hash": "SHA-256",
        "language": "ISO 639-1"
      }
    }
  },
  "embedding_settings": {
    "image": {
      "method": "steganographic_embedding",
      "strength": 0.3,
      "frequency_domain": true,
      "preserve_quality": true,
      "min_quality_threshold": 85
    },
    "video": {
      "method": "temporal_embedding",
      "frames_per_watermark": 30,
      "preserve_quality": true,
      "min_bitrate": "2Mbps"
    },
    "audio": {
      "method": "spectral_embedding",
      "frequency_range": "18kHz-20kHz",
      "preserve_quality": true,
      "imperceptible": true
    }
  },
  "verification": {
    "hash_verification": true,
    "signature_verification": true,
    "timestamp_verification": true,
    "chain_of_custody": true,
    "public_ledger": false
  },
  "compliance_notes": {
    "article": "50(2)",
    "requirement": "Machine-readable format and detectable as artificially generated",
    "deadline": "2026-08-02",
    "enforcement": "Providers must ensure outputs are marked",
    "exceptions": [
      "Assistive functions (spell check, formatting)",
      "Standard editing without substantial alteration"
    ]
  },
  "implementation_guide": {
    "step_1": "Identify content type (image, video, audio, text)",
    "step_2": "Select appropriate watermarking method (prefer C2PA)",
    "step_3": "Embed required metadata fields",
    "step_4": "Generate hash for content verification",
    "step_5": "Add timestamp in ISO 8601 format",
    "step_6": "Ensure watermark is machine-readable and detectable",
    "step_7": "Store original and watermarked content separately (recommended)"
  }
}
